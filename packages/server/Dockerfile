# Builder
FROM node:14-alpine as builder

# Copy server and domain + lib packages
WORKDIR /usr/src/viz/
COPY .eslintrc .
COPY .eslintignore .
COPY package.json .
COPY tsconfig.json .
COPY pnpm-lock.yaml .

COPY packages/server packages/server
COPY packages/domain packages/domain
COPY packages/lib packages/lib

# Install domain + lib + server dependencies
RUN pnpm install --pure-lockfile --non-interactive

# Build common packages
RUN pnpm build:common

# Build server then
WORKDIR /usr/src/viz/packages/server
RUN pnpm build

# Runner
FROM node:14-alpine AS runner

WORKDIR /usr/src/viz
COPY VERSION .

# Copy the dist builds from builder
COPY --from=builder /usr/src/viz/package.json .
COPY --from=builder /usr/src/viz/pnpm-lock.yaml .
COPY --from=builder /usr/src/viz/tsconfig.json .

COPY --from=builder /usr/src/viz/packages/domain/package.json packages/domain/package.json
COPY --from=builder /usr/src/viz/packages/domain/dist packages/domain/dist

COPY --from=builder /usr/src/viz/packages/lib/package.json packages/lib/package.json
COPY --from=builder /usr/src/viz/packages/lib/dist packages/lib/dist

COPY --from=builder /usr/src/viz/packages/server/package.json packages/server/package.json
COPY --from=builder /usr/src/viz/packages/server/dist packages/server/dist

# Install production dependencies
RUN pnpm install --pure-lockfile --non-interactive --production

# Move to the server app
WORKDIR /usr/src/viz/packages/server

# Set the correct ownership for the app folder
RUN chown -R node:node /usr/src/viz/packages/server/

# Launch the server with container
ARG NODE_ENV=production
CMD ["pnpm", "start:prod"]
